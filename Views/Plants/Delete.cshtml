@model PlantNurseryManagement.Models.Plant
@{
    ViewData["Title"] = "Delete Plant";
}
<h2>Delete Plant</h2>
<h4>Are you sure you want to delete this plant?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.QuantityAvailable</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" width="100" />
            }
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PlantId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div> 