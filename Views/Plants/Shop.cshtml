@model IEnumerable<PlantNurseryManagement.Models.Plant>
@{
    ViewData["Title"] = "Shop Plants";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-5">
                <h1 class="display-4 text-success mb-3">
                    <i class="bi bi-flower1 me-3"></i>Welcome to Plant Nursery
                </h1>
                <p class="lead text-muted">Discover beautiful plants for your home and garden</p>
                <div class="mt-4">
                    <a href="@Url.Action("Register", "Account")" class="btn btn-success btn-lg me-3">
                        <i class="bi bi-person-plus me-2"></i>Sign Up
                    </a>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-success btn-lg">
                        <i class="bi bi-person me-2"></i>Login
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <h2 class="text-success mb-4">
                <i class="bi bi-shop me-2"></i>Available Plants
            </h2>
        </div>
    </div>
    
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm product-card">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" 
                             style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                             style="height: 200px;">
                            <i class="bi bi-flower1 text-muted" style="font-size: 3rem;"></i>
                        </div>
                    }
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted">@item.Description</p>
                        
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="fw-bold text-success fs-5">₹@item.Price</span>
                                <span class="badge bg-info">@item.QuantityAvailable in stock</span>
                            </div>
                            
                            @if (item.QuantityAvailable > 0)
                            {
                                <div class="d-grid">
                                    <a href="@Url.Action("Login", "Account")" class="btn btn-success">
                                        <i class="bi bi-cart-plus me-1"></i>Login to Add to Cart
                                    </a>
                                </div>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100" disabled>
                                    <i class="bi bi-x-circle me-1"></i>Out of Stock
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-flower1 display-1 text-muted"></i>
            <h3 class="mt-3 text-muted">No plants available</h3>
            <p class="text-muted">Check back later for new arrivals!</p>
        </div>
    }
    
    <div class="row mt-5">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h4 class="text-success mb-3">
                        <i class="bi bi-star me-2"></i>Why Choose Our Plants?
                    </h4>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <i class="bi bi-truck text-success" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Free Shipping</h6>
                            <small class="text-muted">On orders above ₹999</small>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="bi bi-shield-check text-success" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Quality Guaranteed</h6>
                            <small class="text-muted">Healthy and well-cared plants</small>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="bi bi-headset text-success" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">Expert Support</h6>
                            <small class="text-muted">24/7 customer service</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.product-card {
    transition: transform 0.2s, box-shadow 0.2s;
    border: 1px solid #e9ecef;
}

.product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
}

.card-img-top {
    border-bottom: 1px solid #e9ecef;
}
</style> 