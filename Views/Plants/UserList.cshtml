@model IEnumerable<PlantNurseryManagement.Models.Plant>
@{
    ViewData["Title"] = "Available Plants";
}
<div class="dashboard-card plant-theme shadow-lg p-4 animate__animated animate__fadeIn">
    <h2 class="fw-bold mb-3"><i class="bi bi-flower1 me-2"></i>Available Plants</h2>
    <div class="table-responsive">
        <table class="table table-hover align-middle rounded-3 overflow-hidden">
            <thead class="table-success">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-semibold">@item.Name</td>
                    <td class="text-muted">@item.Description</td>
                    <td><span class="badge bg-success bg-opacity-75"><i class="bi bi-currency-rupee"></i> @item.Price</span></td>
                    <td><span class="badge bg-info text-dark">@item.QuantityAvailable</span></td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="@item.Name" width="60" class="rounded shadow-sm border border-success border-2" />
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-success" asp-controller="Bookings" asp-action="Create" asp-route-plantId="@item.PlantId"><i class="bi bi-cart-plus"></i> Book</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div> 