@model PlantNurseryManagement.Models.Plant
@{
    ViewData["Title"] = "Add Plant";
}
<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="dashboard-card plant-theme shadow-lg p-4 animate__animated animate__fadeIn" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-4 fw-bold"><i class="bi bi-flower1 me-2"></i>Add New Plant</h2>
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="Name" class="fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-flower1"></i></span>
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-card-text"></i></span>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-currency-rupee"></i></span>
                    <input asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-image"></i></span>
                    <input asp-for="ImageUrl" class="form-control" />
                </div>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="QuantityAvailable" class="fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-123"></i></span>
                    <input asp-for="QuantityAvailable" class="form-control" />
                </div>
                <span asp-validation-for="QuantityAvailable" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success flex-fill shadow-sm">Add Plant</button>
                <a asp-action="Index" class="btn btn-secondary flex-fill">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 