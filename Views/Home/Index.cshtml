        </div>
    </div>
</div>
<script>
// Animated Counters
function animateCounter(id, end, duration) {
    let start = 0;
    const step = Math.ceil(end / (duration / 20));
    const el = document.getElementById(id);
    const timer = setInterval(() => {
        start += step;
        if (start >= end) {
            el.textContent = end + '+';
            clearInterval(timer);
        } else {
            el.textContent = start;
        }
    }, 20);
}
window.addEventListener('DOMContentLoaded', function() {
    animateCounter('plantCount', 120, 1200);
    animateCounter('userCount', 80, 1200);
    animateCounter('bookingCount', 200, 1200);
});
</script>
