@{
    ViewData["Title"] = "Home";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<!-- Hero Section -->
<div class="hero-section position-relative" style="background: linear-gradient(135deg, #e8f5e9 0%, #f1f8e9 100%); min-height: 80vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold text-success mb-4 animate__animated animate__fadeInUp">
                        <i class="bi bi-flower1 me-3"></i>Bloom Where You Are Planted!
                    </h1>
                    <p class="lead text-muted mb-4 animate__animated animate__fadeInUp animate__delay-1s">
                        Discover beautiful plants for your home and garden. Quality plants delivered to your doorstep with care and love.
                    </p>
                    <div class="hero-buttons animate__animated animate__fadeInUp animate__delay-2s">
                        <a href="@Url.Action("Shop", "Plants")" class="btn btn-success btn-lg me-3 mb-2">
                            <i class="bi bi-shop me-2"></i>Shop Now
                        </a>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-outline-success btn-lg mb-2">
                            <i class="bi bi-person-plus me-2"></i>Sign Up
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image animate__animated animate__fadeInRight">
                    <img src="/images/Home1.jpg" alt="Beautiful Plants" class="img-fluid rounded-3 shadow-lg" style="max-height: 500px; object-fit: cover;">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="py-5 bg-white">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-success fw-bold mb-3">Why Choose Our Plants?</h2>
                <p class="text-muted">We believe in making self-care effortless. That's why we offer:</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-truck text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="fw-bold">Free Shipping</h5>
                    <p class="text-muted">On all orders above ₹999</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="fw-bold">Quality Guaranteed</h5>
                    <p class="text-muted">Healthy and well-cared plants</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-headset text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="fw-bold">Expert Support</h5>
                    <p class="text-muted">24/7 customer service</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Categories -->
<div class="py-5" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-success fw-bold mb-3">Popular Categories</h2>
                <p class="text-muted">Explore our wide variety of plants</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-3 col-sm-6">
                <div class="category-card text-center p-4 bg-white rounded-3 shadow-sm h-100">
                    <div class="category-icon mb-3">
                        <i class="bi bi-house text-success" style="font-size: 2.5rem;"></i>
                    </div>
                    <h6 class="fw-bold">Indoor Plants</h6>
                    <p class="text-muted small">Perfect for home decoration</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="category-card text-center p-4 bg-white rounded-3 shadow-sm h-100">
                    <div class="category-icon mb-3">
                        <i class="bi bi-tree text-success" style="font-size: 2.5rem;"></i>
                    </div>
                    <h6 class="fw-bold">Outdoor Plants</h6>
                    <p class="text-muted small">For your garden and balcony</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="category-card text-center p-4 bg-white rounded-3 shadow-sm h-100">
                    <div class="category-icon mb-3">
                        <i class="bi bi-droplet text-success" style="font-size: 2.5rem;"></i>
                    </div>
                    <h6 class="fw-bold">Succulents</h6>
                    <p class="text-muted small">Low maintenance plants</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="category-card text-center p-4 bg-white rounded-3 shadow-sm h-100">
                    <div class="category-icon mb-3">
                        <i class="bi bi-flower1 text-success" style="font-size: 2.5rem;"></i>
                    </div>
                    <h6 class="fw-bold">Flowering Plants</h6>
                    <p class="text-muted small">Add color to your space</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Testimonials -->
