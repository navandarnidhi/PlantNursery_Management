@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow plant-theme p-4" style="max-width: 600px; width: 100%;">
        <div class="text-center mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#388e3c" class="bi bi-shield-lock mb-2" viewBox="0 0 16 16">
                <path d="M5.5 9a1.5 1.5 0 1 1 3 0v1a1.5 1.5 0 1 1-3 0V9z"/>
                <path d="M8 0c-.69 0-1.342.13-1.972.38C3.12 1.13 1.5 2.5 1.5 2.5S1 3.5 1 8c0 4.5 7 8 7 8s7-3.5 7-8c0-4.5-.5-5.5-.5-5.5s-1.62-1.37-4.528-2.12A6.978 6.978 0 0 0 8 0zm0 1c.638 0 1.26.12 1.857.34C12.38 2.13 13.5 3.5 13.5 3.5S14 4.5 14 8c0 3.5-6 6.5-6 6.5S2 11.5 2 8c0-3.5.5-4.5.5-4.5s1.12-1.37 3.643-2.16A5.978 5.978 0 0 1 8 1z"/>
            </svg>
            <h1 class="h3 fw-bold">@ViewData["Title"]</h1>
        </div>
        <p class="lead">We value your privacy. Use this page to detail your site's privacy policy and let users know how their data is protected and used.</p>
        <ul class="list-unstyled mt-3 mb-0">
            <li><i class="bi bi-check-circle-fill text-success me-2"></i> Your data is safe and secure.</li>
            <li><i class="bi bi-check-circle-fill text-success me-2"></i> We do not share your information with third parties.</li>
            <li><i class="bi bi-check-circle-fill text-success me-2"></i> You can contact us for any privacy concerns.</li>
        </ul>
    </div>
</div>
