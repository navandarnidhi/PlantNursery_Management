@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="bg-admin d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="dashboard-card plant-theme bg-overlay shadow-lg p-5 animate__animated animate__fadeIn text-center mt-5" style="width: 100%; max-width: 600px;">
        <h2 class="fw-bold mb-4"><i class="bi bi-person-badge me-2"></i>Admin Dashboard</h2>
        <div class="row mb-4">
            <div class="col-md-4 mb-2">
                <div class="card border-0 shadow-sm plant-theme p-3">
                    <i class="bi bi-flower1 display-6 text-success mb-2"></i>
                    <div class="fw-semibold">Manage Plants</div>
                </div>
            </div>
            <div class="col-md-4 mb-2">
                <div class="card border-0 shadow-sm plant-theme p-3">
                    <i class="bi bi-journal-check display-6 text-info mb-2"></i>
                    <div class="fw-semibold">Bookings</div>
                </div>
            </div>
            <div class="col-md-4 mb-2">
                <div class="card border-0 shadow-sm plant-theme p-3">
                    <i class="bi bi-people display-6 text-warning mb-2"></i>
                    <div class="fw-semibold">Users</div>
                </div>
            </div>
        </div>
        <p class="mb-4">Welcome, <span class="fw-bold text-success">@Context.Session.GetString("UserEmail")</span>!</p>
        <div class="d-flex flex-wrap justify-content-center gap-3">
            <a class="btn btn-success px-4 py-2 shadow-sm" asp-controller="Plants" asp-action="Index"><i class="bi bi-flower1 me-1"></i> Manage Plants</a>
            <a class="btn btn-info px-4 py-2 shadow-sm" asp-controller="Bookings" asp-action="AdminList"><i class="bi bi-journal-check me-1"></i> Manage Bookings</a>
            <a class="btn btn-warning px-4 py-2 shadow-sm text-dark" asp-controller="Admin" asp-action="Users"><i class="bi bi-people me-1"></i> View Users</a>
        </div>
    </div>
</div> 