@{
    ViewData["Title"] = "User Dashboard";
}
<div class="bg-home-user d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="dashboard-card plant-theme bg-overlay shadow-lg p-5 animate__animated animate__fadeIn text-center mt-5" style="width: 100%; max-width: 600px;">
        <h2 class="fw-bold mb-4"><i class="bi bi-person-circle me-2"></i>User Dashboard</h2>
        <div class="row mb-4">
            <div class="col-md-6 mb-2">
                <div class="card border-0 shadow-sm plant-theme p-3">
                    <i class="bi bi-flower1 display-6 text-success mb-2"></i>
                    <div class="fw-semibold">View Plants</div>
                </div>
            </div>
            <div class="col-md-6 mb-2">
                <div class="card border-0 shadow-sm plant-theme p-3">
                    <i class="bi bi-calendar-check display-6 text-info mb-2"></i>
                    <div class="fw-semibold">My Bookings</div>
                </div>
            </div>
        </div>
        <p class="mb-4">Welcome, <span class="fw-bold text-success">@Context.Session.GetString("UserEmail")</span>!</p>
        <div class="d-flex flex-wrap justify-content-center gap-3">
            <a class="btn btn-success px-4 py-2 shadow-sm" asp-controller="Plants" asp-action="UserList"><i class="bi bi-flower1 me-1"></i> View Plants</a>
            <a class="btn btn-info px-4 py-2 shadow-sm" asp-controller="Bookings" asp-action="MyBookings"><i class="bi bi-calendar-check me-1"></i> My Bookings</a>
        </div>
    </div>
</div> 